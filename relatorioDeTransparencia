SELECT
	L.[Lead Source],
	L.[Localidade],
	L.[Corretor Responsável],
	L.[Transação],
	COUNT(L.[Localidade]),
	COUNT(L.[Lead Source])
FROM Leads AS L
WHERE
	-- CONDICIONAIS
	L.[Localidade] IN(
	--REV-SP
	'VD-COM Revenda SP',
	'VD-RES Revenda SP',
	-- REV-LZ
	'VD-RES Revenda LZ',
	-- LC-RES-SP
	'LC-RES%SP',
	-- LC-RES-LZ
	'LC-RES%LZ',
	-- LC-COM-SP
	'LC-COM%SP')
AND	L.[Localidade]  IS NOT NULL
AND L.[Lead Source] IS NOT NULL
GROUP BY
	L.[Lead Source],
	L.[Localidade],	
	L.[Corretor Responsável],
	L.[Transação]
GO
